<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="TextView"
            android:padding="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/question_text_view"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
                android:text="@string/button_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/false_button" android:layout_weight="1"/>
        <Button
                android:text="@string/button_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/true_button" android:layout_weight="1"/>
    </LinearLayout>
    <Button
            android:text="@string/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/next_button"/>

</LinearLayout>